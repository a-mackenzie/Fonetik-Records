<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fontHeader">
        <item name="android:fontFamily">@font/voltaire</item>
        <item name="android:textSize">@dimen/fontSizeHeader</item>
        <item name="android:textColor">@color/myGrey</item>
    </style>

    <style name="fontGeneral">
        <item name="android:fontFamily">@font/voltaire</item>
        <item name="android:textSize">@dimen/fontSizeGeneral</item>
        <item name="android:textColor">@color/myBrown</item>
    </style>

</resources>
